{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    // TODO: Remove "as any" workarounds in mapWrapper.ts
    "noImplicitAny": false,
    "jsx": "preserve",
    // TODO: Fix this.openPopup() and this.closePopup()
    "noImplicitThis": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "node", "jest"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "services/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}

